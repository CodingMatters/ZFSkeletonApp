{
    "name": "codingmatters/zf-skeleton-app",
    "description": "Integration for Zend Framework skeleton application",
    "license": "MIT",
    "type": "project",
    "keywords": ["zf skeleton application"],
    "homepage": "https://github.com/CodingMatters/ZFSkeletonApp/",
    "authors": [
        {
            "name": "Gab Amba",
            "email": "gamba@gabbydgab.com",
            "homepage": "http://www.gabbydgab.com/"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "roave/security-advisories": "dev-master",
        "evandotpro/edp-module-layouts": "dev-master",
        "zendframework/zend-component-installer": "^1.0 || dev-develop",        
        "codingmatters/site-module-ini": "^1.0 || ~0.1",
        "codingmatters/dashboard-module-ini": "^1.0 || ~0.1"
    },
    "require-dev": {
        "zendframework/zend-test": "^3.0",
        "squizlabs/php_codesniffer": "^2.3",
        "phpbench/phpbench": "^0.11"
    },
    "autoload": {
        "psr-4": {
            "Application\\": "module/Application/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ApplicationTest\\": "module/Application/test/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "git submodule init",
            "git submodule update"
        ],
        "post-install-cmd": [
            "@install-ui-component",
            "@include-module-config"
        ],
        "post-update-cmd": [
            "@update-ui-component",
            "@include-module-config"
        ],
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "phpcs module",
        "cs-fix": "phpcbf module",
        "test": "phpunit",
        "install-ui-component": [
            "rm -rf public/assets/jquery",
            "rm -rf public/assets/jquery-ui",
            "rm -rf public/assets/font-awesome",
            "rm -rf public/assets/bootstrap",
            "bower install",
            "cp -ar bower_components/jquery/dist public/assets/jquery",
            "cp -ar bower_components/jquery-ui public/assets/jquery-ui",
            "cp -ar bower_components/components-font-awesome public/assets/font-awesome",
            "cp -ar bower_components/components-bootstrap public/assets/bootstrap",
            "rm -rf bower_components"
        ],
        "update-ui-component": [
            "rm -rf public/assets/jquery",
            "rm -rf public/assets/jquery-ui",
            "rm -rf public/assets/font-awesome",
            "rm -rf public/assets/bootstrap",
            "bower update",
            "cp -ar bower_components/jquery/dist public/assets/jquery",
            "cp -ar bower_components/jquery-ui public/assets/jquery-ui",
            "cp -ar bower_components/components-font-awesome public/assets/font-awesome",
            "cp -ar bower_components/components-bootstrap public/assets/bootstrap",
            "rm -rf bower_components"
        ],
        "include-module-config": [            
            "cp -au vendor/codingmatters/site-module-ini/config/autoload/site-module.local.php-dist config/autoload/site-module.local.php",
            "cp -au vendor/codingmatters/dashboard-module-ini/config/autoload/dashboard-module.local.php-dist config/autoload/dashboard-module.local.php"
        ]
    }
}
